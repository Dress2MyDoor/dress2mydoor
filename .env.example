# Copy this file to .env and fill values before running the server
# Do NOT commit your real secrets to git

# Server
PORT=5000

# MongoDB connection (URI). Use MongoDB Atlas or local Docker instance.
# Example (Atlas): mongodb+srv://<user>:<pass>@cluster0.example.mongodb.net/mydb?retryWrites=true&w=majority
# Example (local): mongodb://localhost:27017/dress2mydoor
MONGODB_URI=

# Email config for Nodemailer
EMAIL_SERVICE=gmail
EMAIL_USER=you@example.com
EMAIL_PASSWORD=your-email-password
ADMIN_EMAIL=admin@example.com

# Frontend URL used for CORS / links
FRONTEND_URL=http://localhost:3000

# Admin token used to protect critical endpoints like /api/dresses/seed
# Set this to a strong secret and keep it private. You can pass it to the CLI as --token or
# export ADMIN_TOKEN in your shell before running `npm run sync:gallery`.
ADMIN_TOKEN=replace_with_a_strong_secret
